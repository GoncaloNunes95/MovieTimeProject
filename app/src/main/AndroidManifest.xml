<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.movietime">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logotipo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logotipo"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieTime">

        <activity android:name=".Screen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".EditProfile" />
        <activity
            android:name=".TabbDetailsActivity"
            android:label="@string/title_activity_tabb_details"
            android:theme="@style/Theme.MovieTime.NoActionBar" />
    </application>

</manifest>